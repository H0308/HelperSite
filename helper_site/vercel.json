{
    "version": 2,
    "buildCommand": "chmod +x build.sh && ./build.sh",
    "outputDirectory": "site",
    "framework": null,
    "rewrites": [
        { "source": "/(.*)", "destination": "/$1" }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Strict-Transport-Security",
                    "value": "max-age=31536000; includeSubDomains"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                }
            ]
        }
    ]
}
